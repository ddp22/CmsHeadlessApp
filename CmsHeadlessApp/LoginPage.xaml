            <Label
                x:Name="ErrorMessage"
                TextColor="Red"
                FontSize="Micro"
                IsVisible="false"
                HorizontalOptions="Center"
                />

            <Label
                x:Name="CorrectEmailPassword"
                Text="Correct Email or Password!!!"
                TextColor="Green"
                FontSize="Micro"
                IsVisible="false"
                HorizontalOptions="Center"
                />
