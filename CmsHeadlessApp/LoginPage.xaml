            <Label
                Text="Login"
                FontSize="Title"
                HorizontalOptions="Center"
                />

            <Label
                x:Name="MissingEmail"
                Text="Enter an email!!!"
                TextColor="Red"
                FontSize="Micro"
                IsVisible="false"
                HorizontalOptions="Center"
                />

            <Label
                x:Name="MissingPassword"
                Text="Enter an password!!!"
                TextColor="Red"
                FontSize="Micro"
                IsVisible="false"
                HorizontalOptions="Center"
                />

            <Entry
                x:Name="email"
                Placeholder="Enter email"
                FontSize="Medium"
                MaximumWidthRequest="300"
                />

            
            
            <Entry
                x:Name="password"
                Placeholder="Enter password"
                FontSize="Medium"
                MaximumWidthRequest="300"
                IsPassword="True" 
                />

            

            <Button
                x:Name="loginButton"
                Text="Login"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnLoginClicked"
                HorizontalOptions="Center" />

            <!--<Button
                x:Name="ArButton"
                Text="Ar"
